#include <iostream>
#include <string>

using namespace std;

class word
{
    public:
    string exmp;
    int len = strlen(exmp);
    char firstletter = exmp[0];
    char lastletter = exmp[-1];
};



int main()
{
    word cls;
    string text = cls.exmp;
    int length = cls.len;
    char firslet = cls.firstletter;
    char lstlet = cls.lastletter; 
    std::cout<<"Enter word : "<<std::endl;
    std::cin>>text;
    std::cout<<"The word is : "<<text<<std::endl;
    std::cout<<"The length is : "<<length<<std::endl;
    std::cout<<"The first letter is : "<<firslet<<std::endl;
    std::cout<<"The last letter is : "<<lstlet<<std::endl;
    return 0;
}
